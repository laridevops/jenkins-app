pipeline {
    agent any

    stages {
        stage('initialize') {
            steps {
                sh 'terraform init -no-color'
            }
        }
        
        stage('format') {
            steps {
                sh 'terraform fmt -no-color'
            }
        }
        
        stage('validation') {
            steps {
                sh 'terraform validate -no-color'
            }
        }

        stage('plan') {
            steps {
                sh 'terraform plan -no-color'
            }
        }

        stage('apply') {
            steps {
                sh 'terraform apply --auto-approve -no-color'
            }
        }
    }
}
